# YouTube 댓글 자동 응답 봇 - 환경 변수
# 이 파일을 .env로 복사하고 값을 채워주세요

# 관리자 비밀번호 (Basic Auth)
ADMIN_PASSWORD=admin123

# YouTube API Key (Google Cloud Console에서 발급)
YOUTUBE_API_KEY=your-youtube-api-key

# YouTube 채널 ID (YouTube Studio → 설정 → 채널 → 고급 설정)
YOUTUBE_CHANNEL_ID=your-channel-id

# YouTube OAuth 2.0 (댓글 작성용)
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret

# YouTube OAuth Tokens (OAuth Playground에서 발급)
YOUTUBE_ACCESS_TOKEN=your-access-token
YOUTUBE_REFRESH_TOKEN=your-refresh-token

# Claude API Key (Anthropic Console에서 발급)
CLAUDE_API_KEY=sk-ant-api03-xxxxx
